{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ film.id }}</td>
        </tr>
        <tr>
            <th>Objet</th>
            <td>{{ film.objet }}</td>
        </tr>
        <tr>
            <th>Duree</th>
            <td>{{ formation.duree }}</td>
        </tr>
        <tr>
            <th>DateSortie</th>
            <td>{{ film.dateSortie ? film.dateSortie|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_film_index') }}">back to list</a>

    <a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('film/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
